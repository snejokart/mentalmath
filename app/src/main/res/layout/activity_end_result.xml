<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".EndResult">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="118dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="119dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView6"
            style="@style/mainTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Конец тренировки"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="48sp" />

            <ImageView
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_marginLeft="8dp"
                app:srcCompat="@drawable/star" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Новый рекорд!"
            android:textAlignment="center"
            android:textColor="@color/textpink"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="31dp"
            android:orientation="horizontal">

            <TextView
                style="@style/textcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Количество задач: " />

            <TextView
                android:id="@+id/correct"
                style="@style/textcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="0"
                android:textColor="@color/textpink" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                style="@style/textcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Количество верно решенных задач: " />

            <TextView
                android:id="@+id/correctansw"
                style="@style/textcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="0"
                android:textColor="@color/textpink" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                style="@style/textcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Количество неверно решенных задач: " />

            <TextView
                android:id="@+id/mistakes"
                style="@style/textcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="0"
                android:textColor="@color/textpink" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                style="@style/textcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Общее затраченное время: " />

            <TextView
                android:id="@+id/time"
                style="@style/textcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="0"
                android:textColor="@color/textpink" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/go_back_main"
            style="@style/custombtnpink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="12dp"
            android:text="Вернуться на главную" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/restart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/enter"
            android:fontFamily="@font/roboto_bold"
            android:text="Повторить"
            android:textAllCaps="false"
            android:textColor="@color/secondpink"
            android:textSize="16sp"
            android:visibility="gone"
            tools:visibility="gone" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>