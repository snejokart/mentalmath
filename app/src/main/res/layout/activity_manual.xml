<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/zero"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Manual">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.120000005"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            style="@style/mainTitle" />

        <TextView
            android:id="@+id/textView5"
            style="@style/textcolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:text="Задачи будут постепенно усложняться в зависимости от набранной суммы баллов. Неправильный ответ или время вышло - минус баллы в зависимости от сложности."
            android:textAlignment="textStart" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal">

            <TextView
                style="@style/textcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0-10"
                android:textAlignment="textStart" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/star" />

            <TextView
                style="@style/textcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": начальный уровень"
                android:textAlignment="textStart" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal">

            <TextView
                style="@style/textcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11-30"
                android:textAlignment="textStart" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/star" />

            <TextView
                style="@style/textcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": средний уровень"
                android:textAlignment="textStart" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal">

            <TextView
                style="@style/textcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="31-60"
                android:textAlignment="textStart" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/star" />

            <TextView
                style="@style/textcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": высокий уровень"
                android:textAlignment="textStart" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal">

            <TextView
                style="@style/textcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="61+"
                android:textAlignment="textStart" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/star" />

            <TextView
                style="@style/textcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": продвинутый уровень"
                android:textAlignment="textStart" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            style="@style/textcolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="46dp"
            android:text="3 ошибки подряд - окончание тренировки"
            android:textAlignment="textStart" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_start"

            style="@style/custombtnpink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/mixed"
            android:text="Поехали!" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                style="@style/sendtextcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Самый лучший рекорд в этой категории: " />

            <TextView
                android:id="@+id/best_record"
                style="@style/sendtextcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />

            <ImageView
                android:id="@+id/imageButton"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:background="@drawable/star" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/sendtextcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Последний рекорд в этой категории: " />

            <TextView
                android:id="@+id/last_record"
                style="@style/sendtextcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:background="@drawable/star" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>