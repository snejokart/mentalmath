<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="115dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            style="@style/textcolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="@string/maindescmotivation" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            style="@style/custombtnpink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_black"
            android:text="Сложение" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/custombtngreen"
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вычитание" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/custombtnpink"
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Умножение" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/custombtngreen"
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Деление" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/custombtnpink"
            android:id="@+id/button5"
            android:layout_marginBottom="0dp"
            android:backgroundTint="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Всё вместе" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                style="@style/sendtextcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Самый лучший рекорд: " />

            <TextView
                android:id="@+id/textView3"
                style="@style/sendtextcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40" />

            <ImageView
                android:id="@+id/imageButton"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:background="@drawable/star" />

            <TextView
                android:id="@+id/textView4"
                style="@style/sendtextcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  в категории  " />

            <TextView
                android:id="@+id/textView5"
                style="@style/sendtextcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="Умножение" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/sendtextcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Последний рекорд:" />

            <TextView
                style="@style/sendtextcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:background="@drawable/star" />

            <TextView
                style="@style/sendtextcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  в категории  " />

            <TextView
                style="@style/sendtextcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="Умножение" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>