<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".YourAccount">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_back"
        android:layout_width="25dp"
        android:layout_height="28dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/icon_arrow_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="64dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView7"
            style="@style/mainTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="Профиль"
            android:textAlignment="textStart" />

        <EditText
            android:id="@+id/surname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/enter"
            android:fontFamily="@font/roboto"
            android:hint="Фамилия"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/textpink"
            android:textColorHint="@color/mixed"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/enter"
            android:fontFamily="@font/roboto"
            android:hint="Имя"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/textpink"
            android:textColorHint="@color/mixed"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/patronymic"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/enter"
            android:fontFamily="@font/roboto"
            android:hint="Отчество"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/textpink"
            android:textColorHint="@color/mixed"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/enter"
            android:fontFamily="@font/roboto"
            android:hint="Возраст"
            android:digits="1234567890"
            android:maxLength="2"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/textpink"
            android:textColorHint="@color/mixed"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/num_class"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="27dp"
            android:background="@drawable/enter"
            android:fontFamily="@font/roboto"
            android:hint="Класс"
            android:inputType="text"
            android:digits="1234567890"
            android:maxLength="2"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/textpink"
            android:textColorHint="@color/mixed"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_save"
            style="@style/custombtnpink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:backgroundTint="@color/mixed"
            android:text="Сохранить" />

        <TextView
            android:id="@+id/change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Изменить пароль"
            android:textAlignment="center"
            android:textColor="@color/secondpink"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выйти из аккаунта"
            android:textAlignment="center"
            android:textColor="@color/secondpink"
            android:textSize="12sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>